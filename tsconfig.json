{
  "version": "3.1.6",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": [
      "dom",
      "es2015",
      "es6",
      "es2017"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "public/",
    "rootDir": "src/",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "target": "es5",
    "baseUrl": "src",
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": true,
        "ignoreDefinitionFiles": true,
        "configFile": "./tslint.json"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "public",
    "node_modules",
    "node_modules/@tryghost"
  ]
}